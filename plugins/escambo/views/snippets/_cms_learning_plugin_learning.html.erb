<% profile = learning.profile %>

<div class="escambo-snippet cms-learning-plugin-learning-snippet">
  <div class="first-column">
    <div class="label">
      <%= _('Learning') %>
    </div>
  </div>

  <div class="second-column">
    <%= _('%{profile} is interested in %{learning}') % {
      :profile => link_to(profile.name, profile.url),
      :learning => link_to(learning.name, learning.url),
      } %>

    <%= render :partial => 'snippets/local', :locals => {:profile => profile} %>
  </div>

  <%= render :partial => 'snippets/start_exchange', :locals => {:profile => profile} %>

  <div class="clean"></div>
</div>
