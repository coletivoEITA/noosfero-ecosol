<% actor = message.enterprise_sender.id == profile.id ? 'profile' : 'theother' %>
<% profile = actor == 'profile' ? profile : message.proposal.the_other(profile) %>

<div id="exchange-message-<%= message.id %>" class="exchange-message">

  <div class="exchange-message-thumb <%=actor%>">
    <%= link_to profile_image(profile, :minor), profile.url %>
    <p align="center"><%= message.created_at.strftime(_("%m/%d/%y <br> %H:%M")) %></p>
  </div>

  <div class="arrow-wrap <%=actor == 'profile' ? 'left' : 'right' %>">
    <div class="arrow">
    </div>
  </div>

  <div class="exchange-message-body <%=actor %>">
    <p><%= message.body %></p>
  </div>
</div>
