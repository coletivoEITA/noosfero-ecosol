<div id="filter" class="wireframe-size <%= 'with-actions' if type == :product %>">

  <div class="title filter-box">
    <%= t('views.filter.filter') %>
  </div>

  <% form_tag remote: true, :update => 'search-results', html: {data: {loading: '#filter'}},
    :url => {:action => :index}, :html => {:id => 'filter-form'}, :method => :get do %>

    <div class="fields filter-box">

      <% if type == :supplier %>
        <%= render :partial => 'suppliers_plugin_myprofile/filter_fields' %>
      <% elsif type == :product %>
        <%= render :partial => 'suppliers_plugin_product/filter_fields' %>
      <% end %>

    </div>

    <div class="submit">
      <%= submit_tag t('views.filter.filter_it'), :onclick => "var field = this; function name_form_submit() {field.form.onsubmit();}; setTimeout(name_form_submit, 300);" %>
    </div>

  <% end %>
</div>

