<%= pagination_links @products %>

<div id="result-count" class="">
  <small><%= t('suppliers_plugin.views.product._search.showing_pcount_produc') % {:pcount => @products.length, :allpcount => @all_products_count} %></small>
</div>

<div id="results" class="sortable-table">
  <div class="table-header" style="<%= "display: none" if @products.empty? %>">
    <div class="box-field status"><%=t('suppliers_plugin.views.product._search.status')%></div>
    <div class="box-field category"><%=t('suppliers_plugin.views.product._search.category')%></div>
    <div class="box-field supplier"><%=t('suppliers_plugin.views.product._search.supplier')%></div>
    <div class="box-field product"><%=t('suppliers_plugin.views.product._search.product')%></div>
    <div class="box-field margin"><%=t('suppliers_plugin.views.product._search.margin')%></div>
    <div class="box-field price"><%=t('suppliers_plugin.views.product._search.price')%></div>
    <div class="box-field stock"><%=t('suppliers_plugin.views.product._search.stock')%></div>
    <div class="box-field unit"><%=t('suppliers_plugin.views.product._search.unit')%></div>
    <div class="clean"></div>
  </div>

  <div class="table-content">
    <% if @products.empty? %>
      <%= t('suppliers_plugin.views.product._search.we_don_t_have_product') %>
    <% else %>
      <% @products.each do |product| %>
        <div id="our-product-<%=product.id%>" class="our-product value-row" toggleedit="suppliers.our_product.toggle_edit();">
          <%= render :partial => "suppliers_plugin_product/edit_line", :locals => {:product => product} %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
