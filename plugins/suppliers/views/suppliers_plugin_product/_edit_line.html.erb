<% pp product %>

<div class="box-view">
  <div class="box-field status"><%= product.available ? t('suppliers_plugin.views.product._edit_line.active') : t('suppliers_plugin.views.product._edit_line.inactive') %></div>
  <div class="box-field category"><%= nil %></div>
  <div class="box-field supplier"><%= product.supplier.abbreviation_or_name %></div>
  <div class="box-field product box-edit-link"><%= product.name %></div>
  <div class="box-field price-with-unit"><%= price_with_unit_span product.price_as_currency_number, product.unit %></div>
  <div class="box-field stock"><%= product.stored || 'âˆž' %></div>
  <%= edit_arrow "#our-product-#{product.id}", false, :class => "box-field" %>

  <div class="cleaner"></div>
</div>

<%= render :partial => 'suppliers_plugin_product/edit', :locals => {:product => product} %>

<div class="cleaner"></div>
