<% if @supplier %>
  <div class="supplier-missing-products-column-view">
    <% if @not_distributed_products.blank? %>
      <div class="missing-explanation">
        <%= t('suppliers_plugin.views.product._select_missing.there_isn_t_any_new_p') %>
      </div>
    <% else %>
      <div class="missing-explanation">
        <%= t('suppliers_plugin.views.product._select_missing.the_following_product') %>
      </div>
      <% @not_distributed_products.each_slice(6) do |slice| %>
        <div class="supplier-missing-products-column">
          <% slice.each do |product| %>
            <% data = {:product => {:supplier_id => @supplier.id, :supplier_product_id => product.id}}.to_json %>
            <%= link_to_function product.name, "distribution.our_product.add_from_product(this, '#{url_for(:controller => :suppliers_plugin_product, :action => :new)}', #{data});",
            :class => 'supplier-missing-products-item' %>
          <% end %>
        </div>
      <% end %>
    <% end %>

    <div class="cleaner"></div>
  </div>
<% end %>

<% unless @not_distributed_products.blank? %>
  <%= link_to_function t('suppliers_plugin.views.product._select_missing.add_all_missing_produ'), "distribution.our_product.add_missing_products(this, '#{url_for(:controller => :suppliers_plugin_product, :action => :add_missing_products)}');" %>&emsp;
<% end %>
<%= link_to_function t('suppliers_plugin.views.product._select_missing.cancel'), '', :class => 'toggle-edit' %>
