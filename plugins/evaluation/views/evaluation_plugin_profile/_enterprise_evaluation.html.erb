<div class="evaluation-snippet">

  <p>
    <%= _('Evaluation done by %{evaluator} at %{time}') % {
      :evaluator => evaluation.evaluator.name,
      :time => evaluation.created_at.strftime(_("%m/%d/%Y at %H:%Mh")),
    } %>
  </p>

  <% if evaluation.evaluator == profile %>
    <div class="evaluation-thumb">
      <%= link_to profile_image(evaluation.evaluator, :minor), profile.url %>
    </div>

    <div class="arrow-wrap left">
      <div class="arrow">
      </div>
    </div>
  <% end %>

  <div class="evaluation-text">

    <p class="evaluation-message">
      <%= evaluation.text %>
    </p>

    <div class="evaluation-footer">
      <div class="evaluation-score">
        <h5><%= _('Score') %></h5>
        <%= render :partial => 'evaluation_plugin_shared/star_value', :locals => {:value => evaluation.score.to_f} %>
      </div>
      <div class="evaluation-result">
        <h5><%= _('The deal happened?') %></h5>
        <%= evaluation.result_message %>
      </div>
    </div>
  </div>

  <% if evaluation.evaluator != profile %>
    <div class="arrow-wrap right">
      <div class="arrow">
      </div>
    </div>
    <div class="evaluation-thumb">
      <%= link_to profile_image(evaluation.evaluator, :minor), profile.url %>
    </div>
  <% end %>

  <div class="clean"></div>

</div>
