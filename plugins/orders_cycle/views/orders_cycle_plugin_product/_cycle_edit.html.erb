<div class="box-view">
  <span class='box-field category'><%= nil %></span>
  <span class='box-field supplier'><%= p.supplier.abbreviation_or_name %></span>
  <span class='box-field name box-edit-link'><%= p.name %></span>
  <span class="box-field price"><%= price_span p.price_as_currency_number %></span>
  <span class="box-field quantity-available"><%= p.quantity_localized || 'âˆ' %></span>

  <%= edit_arrow "", false, onclick: 'return false;', class: "box-field cycle-product-actions" %>
</div>

<div class='box-edit' style="display: none">
  <%= form_for p, as: :product, remote: true, url: {controller: :orders_cycle_plugin_product, action: :cycle_edit, id: p.id } do |f| %>

    <div class="cycle-product-line">
      <%= labelled_field f, :price, t('views.product._cycle_edit.sell_price'), f.text_field(:price, value: p.price_as_currency_number, onkeyup: 'orders_cycle.offered_product.pmsync(this, false);') %>
      <%= labelled_field f, :margin_percentage, t('views.product._cycle_edit.margin'), f.text_field(:margin_percentage, value: p.margin_percentage_localized, onkeyup: "orders_cycle.offered_product.pmsync(this, true);") %>
      <%# labelled_field f, :quantity, t('views.product._cycle_edit.qty_offered'), f.text_field(:quantity, value: p.quantity_localized) %>

      <div class="clean"></div>
    </div>

    <div class="cycle-product-line">
      <%= labelled_field f, :original_price, t('views.product._cycle_edit.default_sell_price'), f.text_field(:original_price, value: p.original_price_as_currency_number, disabled: '') %>
      <%= labelled_field f, :original_margin, t('views.product._cycle_edit.default_margin'), f.text_field(:original_margin_percentage, value: p.original_margin_percentage_localized, disabled: '') %>
      <%# labelled_field f, :original_stored, t('views.product._cycle_edit.qty_in_stock'), f.text_field(:original_stored, value: p.original_stored_localized, disabled: '') %>

      <div class="clean"></div>
    </div>

    <div class="cycle-product-line">
      <%= labelled_field f, :buy_price, t('views.product._cycle_edit.buy_price'), f.text_field(:buy_price, value: p.buy_price_as_currency_number, disabled: '') %>
      <%= labelled_field f, :buy_unit, t('views.product._cycle_edit.buy_unit'), text_field_tag(:buy_unit, p.buy_unit.singular, disabled: '') %>
      <%= labelled_field f, :sell_unit, t('views.product._cycle_edit.sell_unit'), text_field_tag(:sell_unit, p.sell_unit.singular, disabled: '') %>

      <div class="clean"></div>
    </div>

    <%= f.submit t('views.product._cycle_edit.save') %>
    <%= link_to_function t('views.product._cycle_edit.cancel_updates'), 'toggle-edit' => '' %>&emsp;
    <%= link_to t('views.product._cycle_edit.remove_from_cycle'), {controller: :orders_cycle_plugin_product, action: :cycle_destroy, id: p.id },
      remote: true, data: {update: "#cycle-product-#{p.id}",
                           confirm: if p.items.blank? then nil else t('views.product._cycle_edit.all_ordered_products') end} %>&emsp;

    <% if p.from_product %>
      <%= link_to t('views.product._cycle_edit.edit_product'), {controller: :orders_cycle_plugin_product, action: :index, anchor: "our-product-#{p.from_product.id}"} %>&emsp;
    <% end %>
  <% end %>

  <div class="clean"></div>
</div>

<div class="clean"></div>
