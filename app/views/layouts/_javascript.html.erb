<%= javascript_include_tag 'rails.js',
'lodash.compat.min.js',
'jquery-2.1.1.min', 'jquery-migrate-1.2.1',
'jquery.colorbox-min', 'colorbox-helper',
'jquery.cycle.all.min.js',
'jquery-ui-1.10.4/js/jquery-ui-1.10.4.min', 'jquery.scrollTo', 'jquery.form.js', 'jquery-validation/jquery.validate',
'jquery.cookie', 'jquery.ba-bbq.min.js', 'reflection', 'jquery.tokeninput',
'jquery-timepicker-addon/dist/jquery-ui-timepicker-addon', 'inputosaurus.js',
'add-and-join', 'report-abuse', 'manage-products', 'autogrow',
'pagination', 'loading-overlay',
'application.js',
'modal', # need application.js
 cache: ('cache/application' if NOOSFERO_CONF['cache_javascripts']) %>

<% language = FastGettext.locale %>
<% %w{messages methods}.each do |type| %>
  <% require_path = File.join('jquery-validation', 'localization', type+'_'+language) %>
  <% full_path = Rails.root.join('public', 'javascripts', require_path+'.js')%>
  <%= javascript_include_tag require_path if File.exists?(full_path) %>
<% end %>
